<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.github.yusufahmadi.labelcalculator">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApp">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.MyApp"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApp"/>
        <activity
            android:name=".ui.ribbon.RibbonInputActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApp"/>
        <activity
            android:name=".ui.label.LabelInputActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApp"/>
        <activity
            android:name=".BahanActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApp"/>
        <activity
            android:name=".BahanLabelActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApp"/>
        <activity
            android:name=".TypeTaffetaActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApp"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>